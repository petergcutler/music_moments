<%= form_for @post do |f| %>

  <%= f.label :title, "Title:" %>
  <%= f.text_field :title, :style => "width: 300px;" %>
<br><br>
  <%= f.label :song_url, "Song URL:" %>
  <%= f.text_field :song_url, :style => "width: 300px;" %>
<br><br>
  <%= f.label :moment, "Moment:" %>
  <%= f.text_field :moment, :style => "width: 400px; height: 200px"%>
<br><br>
<div class="form-group">
    <%= f.label :tags, "Tags (separated by commas)" %>
    <%= f.text_field :tag_list, class: "form-control" %>
</div>
  <%= f.submit %>

<% end %>
