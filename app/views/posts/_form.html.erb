<div class="container"><%= form_for @post do |f| %>
  <div class="row">
    <div class=".col-md-3"><%= f.label :title, "post title" %></div>
    <div class=".col-md-5"><%= f.text_field :title, :style => "width: 400px;" %></div>
  </div>
    <br><br>
  <div class="row">
    <div class=".col-md-3"><%= f.label :song_url, "youtube or soundcloud link" %></div>
    <div class=".col-md-5"><%= f.text_field :song_url, :style => "width: 400px;" %></div>
  </div>
    <br><br>
  <div class="row">
    <div class=".col-md-3"><%= f.label :moment, "what does this song remind you of?" %></div>
    <div class=".col-md-5"><%= f.text_field :moment, :style => "width: 400px; height: 200px;"%></div>
  </div>
<br><br>
<div class="row form-group">
    <div class=".col-md-3"><%= f.label :tags, "tags (separated by commas)" %></div>
    <div class=".col-md-5"><%= f.text_field :tag_list, class: "form-control", :style => "width: 400px" %></div>
</div>
  <%= f.submit %>
<% end %>
</div>
